<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/leftNav.css" asp-append-version="true" />
</head>
<body>
    <header>
        <partial name="~/Views/Shared/Partials/_TopNavPartial.cshtml" />
    </header>
    <partial name="~/Views/Shared/Partials/_LeftNavPartial.cshtml" />

    <div class="container">
        <main role="main" id="main-container" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <partial name="~/Views/Shared/Partials/_CookieConsentPartial.cshtml" />

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-cookie/jquery.cookie.min.js"></script>
    <script src="~/js/layout/leftNav.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
