@model ICollection<ProjectViewModel>
@{
    ViewData["Title"] = "List all projects.";
}

<link rel="stylesheet" href="~/css/Projects/GetAll.css" />

<div class="row">
    <div class="col md-6 text-center">
        <h3>Projects</h3>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-9 col-md-9 col-sm-8 col-8">
        </div>
        <div class="col-lg-3 col-md-3 col-sm-4 col-4">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Projects"> + New project</a>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="project col-md-6">
                <a asp-action="Get" asp-controller="Projects" asp-route-id="@item.Id" class="m-2">
                    <div class="card">
                        <div class="card-header">
                            <b class="text-dark">@item.Name</b>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-secondary">@item.ShortDescription</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
