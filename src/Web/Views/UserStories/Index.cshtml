@model IEnumerable<UserStoriesAllViewModel>

@{
    ViewData["Title"] = "User stories overview";
}

<style>
    td {
        border: 0px solid #dee2e6 !important;
    }

    #table-nav {
        border-radius: 20px 20px 0px 0px;
    }
</style>


<div class="container">
    <div class="overflow-auto">
        <h2>User stories</h2>
        <nav class="navbar navbar-expand-sm navbar-expand-md navbar-expand-lg navbar-light bg-light" id="table-nav">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="UserStories"
                           asp-action="Create" asp-route-projectId="@this.ViewContext.RouteData.Values["projectId"]">
                            Add +
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <table class="table table-responsive-md table-bordered table-striped table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Tasks Count</th>
                    <th>Story Points</th>
                    <th>Priority</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var userStory in Model)
                {
                    <tr>
                        <td>@userStory.Id</td>
                        <td>@userStory.Title</td>
                        <td>@userStory.TasksCount</td>
                        <td>@userStory.StoryPoints</td>
                        <td>@userStory.BacklogPriorityPriority</td>
                        <td>
                            <a asp-action="Get" asp-route-userStoryId="@userStory.Id" asp-route-projectId="@this.ViewContext.RouteData.Values["projectId"]"  class="btn btn-sm btn-info">Edit</a>
                            <a asp-action="Delete" asp-route-userStoryId="@userStory.Id" asp-route-projectId="@this.ViewContext.RouteData.Values["projectId"]" class="btn btn-sm btn-danger">Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
